<!-- app/templates/index.hbs -->
<div class="page-header">
  <h1>Dashboard<small> // Hello, {{currentPerson.name}}!</small>
  </h1>
</div>

<div class="row">
  <!-- History list, total, & new request button -->
  <div class="col-xs-10 col-xs-offset-1 col-md-6 col-md-offset-1">
    <div class="table-responsive">
      <table class="table table-striped">
        <caption>Payment History</caption>
        <thead>
          <tr>
            <th>Date</th>
            <th>Person</th>
            <th>Amount</th>
          </tr>
        </thead>
        <tfoot>
          <!-- HANDLEBARS TO POPULATE TOTAL GOES HERE -->
          <tr>
            <td colspan="3" class="text-right">Example Total</td>
          </tr>
        </tfoot>
        <tbody>
          <!-- HANDLEBARS TO POPULATE TABLE GOES HERE -->
          <tr>
            <td>Example</td>
            <td>Example</td>
            <td>Example</td>
          </tr>
        </tbody>
      </table>
    </div>
    <!-- ADD HANDLEBARS TO DISABLED PROPERTY -->
    <button type="button" class="btn btn-primary btn-block">New Request</button>
  </div>

  <!-- Individual person totals & pay buttons -->
  <div class="col-xs-6 col xs-offset-3 col-md-3 col-md-offset-1">
    <h3>Individual Totals</h3>
    {{#each model as |person id|}}
      <div class="top-poof">
        <label for="total-{{id}}">{{person.name}}:</label>
        <br>
        <div class="btn-group btn-group-lg" role="group">
          <button class="btn btn-default" id="total-{{id}}">$$.$$</button>
          <button class="btn btn-success">Pay</button>
        </div>
      </div>
    {{/each}}
  </div>
</div>